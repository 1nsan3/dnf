#!/usr/bin/python
import os
import sys

if __name__ != "__main__":
    sys.stderr.write("the toplevel dnf module must not be imported")
    sys.exit(1)

here = sys.path[0]
if here == '/usr/bin':
    # installed dnf package
    dnf_toplevel = '/usr/lib/python2.7/site-packages/'
else:
    # git checkout
    dnf_toplevel = os.path.dirname(here)
    sys.path[0] = dnf_toplevel

from dnf.cli import yummain
yummain.user_main(sys.argv[1:], exit_code=True)
